<h1>All Items</h1>

<% @items.each do |item| %>
  <p><b><%= item.name %></b></p>
  <p>Quantity: <%= item.quantity %></p>
  <p>Price: $<%= item.price %></p>
  <p>Location: <%= link_to item.warehouse.location, warehouse_path(item.warehouse.id) %> Warehouse</p>
<% end %>
<br>
<%= button_to 'Go Back', root_path, method: :get %>
